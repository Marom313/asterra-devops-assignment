{
  "family": "asterra-geo-worker",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",

  "containerDefinitions": [
    {
      "name": "geo-worker",
      "image": "<account-id>.dkr.ecr.eu-west-1.amazonaws.com/asterra-geo-worker:1.0.0",
      "essential": true,

      "portMappings": [
        { "containerPort": 5000 }
      ],

      "environment": [
        { "name": "S3_BUCKET", "value": "geojson-bucket" },
        { "name": "SQS_URL", "value": "geojson-queue-url" }
      ],

      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:secretsmanager:..."
        }
      ],

      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/asterra-geo-worker",
          "awslogs-region": "eu-west-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
